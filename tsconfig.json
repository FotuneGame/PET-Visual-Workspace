{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl" : "./src",
    "paths": {
      "@/*":["./*"],
      "@ui": ["./components/ui/"],
      "@widgets": ["./components/widgets/"],
      "@pages": ["./pages/"],
      "@hooks/*": ["./hooks/*"],
      "@api/": ["./api/"],
      "@utils/*": ["./utils/*"],
      "@store/*": ["./store/*"],
      "@providers": ["./providers/"],
      "@router": ["./router/"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/*.test.*", "build/**/*"]
}
